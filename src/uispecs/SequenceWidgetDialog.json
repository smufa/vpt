// #package uispecs

// #section SequenceWidgetDialog

{
  "type": "draggable-container",
  "label": "File sequence",
  "bind": "sequenceWidget",
  "children": [
    {
      "type": "accordion",
      "label": "Settings",
      "contracted": true,
      "children": [
        {
          "type": "field",
          "label": "Interval (ms):",
          "children": [
            {
              "type": "spinner",
              "bind": "interval",
              "value": 500,
              "min": 50
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Controls",
      "bind": "sequenceControlsContainer"
    }
  ]
}