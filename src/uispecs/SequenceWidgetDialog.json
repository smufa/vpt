// #package uispecs

// #section SequenceWidgetDialog

{
  "type": "draggable-container",
  "label": "File sequence",
  "bind": "sequenceWidget",
  "children": [
    {
      "type": "accordion",
      "label": "Settings",
      "children": [
        {
          "type": "field",
          "label": "Rendering time:",
          "children": [
            {
              "type": "dropdown",
              "bind": "renderingType",
              "options": [
                {
                  "value": "infinite",
                  "label": "Infinite",
                  "selected": true
                },
                {
                  "value": "fixed",
                  "label": "Fixed interval"
                },
                {
                  "value": "convergence",
                  "label": "Convergence"
                }
              ]
            }
          ]
        },
        {
          "type": "field",
          "bind": "intervalField",
          "label": "Interval (ms):",
          "visible": false,
          "children": [
            {
              "type": "spinner",
              "bind": "interval",
              "value": 500,
              "min": 50
            }
          ]
        },
        {
          "type": "field",
          "bind": "thresholdField",
          "label": "Threshold:",
          "visible": false,
          "children": [
            {
              "type": "slider",
              "bind": "threshold",
              "value": 0.5,
              "min": 0,
              "max": 1,
              "step": 0.1
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Rendered images",
      "children": [
        {
          "type": "field",
          "label": "frames:",
          "children": [
            {
              "type": "field",
              "bind": "numberOfRenderedImages",
              "label": "0"
            }
          ]
        },
        {
          "type": "field",
          "label": "Add on render:",
          "children": [
            {
              "type": "checkbox",
              "bind": "addOnRender",
              "checked": false
            }
          ]
        },
        {
          "type": "field",
          "children": [
            {
              "type": "button",
              "label": "Add frame",
              "bind": "addFrame"
            }
          ]
        },
        {
          "type": "field",
          "children": [
            {
              "type": "button",
              "label": "Clear frames",
              "bind": "clearFrames"
            }
          ]
        },
        {
          "type": "field",
          "children": [
            {
              "type": "button",
              "label": "Export GIF",
              "bind": "buttonDownloadGIF",
              "visible": false
            }
          ]
        },
        {
          "type": "field",
          "children": [
            {
              "type": "button",
              "label": "Export ZIP",
              "bind": "buttonDownloadZIP",
              "visible": false
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Controls",
      "bind": "sequenceControlsContainer"
    }
  ]
}